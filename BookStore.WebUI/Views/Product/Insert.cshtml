@model InsertProductDto
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />

        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Stok</label>
        <input type="number" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Ürün Fiyat</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürün Ekle</button>
    </div>
</form>
