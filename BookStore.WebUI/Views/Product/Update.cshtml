@model GetByIdProductDto
@{
    ViewData["Title"] = "Ürünler";
    ViewData["Description"] = "Ürün Güncelle";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
   <input type="hidden" asp-for="ProductId" />
    <div class="container">
        <br /><br />

        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Stok</label>
        <input type="number" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Ürün Fiyat</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürünü Güncelle</button>
    </div>
</form>
