<section id="billboard">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<button class="prev slick-arrow">
					<i class="icon icon-arrow-left"></i>
				</button>

				<div class="main-slider pattern-overlay">
					@foreach (var item in Model)
					{
						<div class="slider-item">
							<div class="banner-content">
								<h2 class="banner-title">@item.ProductName</h2>
								<p>@item.Description</p>
								<div class="btn-wrap">
									<a href="#" class="btn btn-outline-accent btn-accent-arrow">
										Daha Fazlası<i class="icon icon-ns-arrow-right"></i>
									</a>
								</div>
							</div><!--banner-content-->
							<img src="@item.ImageUrl " style="width:395;height:572;" alt="banner" class="banner-image">
						</div>
					
						<!--slider-item-->
					}
				</div><!--main-slider-->

				<button class="next slick-arrow">
					<i class="icon icon-arrow-right"></i>
				</button>

			</div>
		</div>
	</div>
</section>
