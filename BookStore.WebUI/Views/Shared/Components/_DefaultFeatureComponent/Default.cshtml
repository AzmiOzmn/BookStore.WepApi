@model List<ResultProductDto>
@*
    _DefaultFeatureComponent
*@

<section id="featured-books" class="py-5 my-5">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<div class="section-header align-center">
					<div class="title">
						<span>BAZI KALİTELİ ÜRÜNLER </span>
					</div>
					<h2 class="section-title">Öne Çıkan Kitaplar</h2>
				</div>

				<div class="product-list" data-aos="fade-up">
					<div class="row">

						@foreach (var item in Model)
						{
							<div class="col-md-3">
								<div class="product-item">
									<figure class="product-style">
										<img src="@item.ImageUrl" alt="Books" class="product-item" style="width:275px;height:400px;">
										<button type="button"
												class="add-to-cart"
												data-toggle="modal"
												data-target="#bookDescriptionModal"
												data-title="@item.ProductName"
												data-description="@item.Description">
											Hakkında
										</button>
									</figure>
									<figcaption>
										<h3>@item.ProductName</h3>
										<span>@item.AuthorName</span>
										<div class="item-price">₺ @item.ProductPrice</div>
									</figcaption>
								</div>
							</div>
						}


					</div><!--ft-books-slider-->
				</div><!--grid-->


			</div><!--inner-content-->
		</div>

		<div class="row">
			<div class="col-md-12">

				<div class="btn-wrap align-right">
					<a href="#" class="btn-accent-arrow">
						Tüm Ürünleri Görüntüle <i class="icon icon-ns-arrow-right"></i>
					</a>
				</div>

			</div>
		</div>
	</div>
</section>