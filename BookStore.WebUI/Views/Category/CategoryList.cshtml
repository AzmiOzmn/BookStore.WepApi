@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Kateogriler";
    ViewData["Description"] = "Kategori Listesi";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}


<div class="container">
    <br /><br />

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                   <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger">Sil</a>
                   <a href="/Category/Update/@item.CategoryId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Category/Insert/" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>



